<resources
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/pastelRose</item>
        <item name="colorPrimaryDark">@color/pastelRoseDarker</item>
        <item name="colorAccent">@color/pastelRose</item>

        <item name="colorControlHighlight">#0DFFFFFF</item>
    </style>

    <!-- TEXT VIEWS -->
    <style name="TitleText">
        <item name="android:fontFamily">@font/source_sans_pro_bold</item>
        <item name="android:textSize">42sp</item>
        <item name="android:textColor">@color/pureWhite</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TitleTextMatchResult" parent="TitleText">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="SecondaryTitleTextBlack">
        <item name="android:fontFamily">@font/lato_black</item>
        <item name="android:textColor">@color/pureWhite</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SecondaryTitleTextBold">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/pureWhite</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="BoldParagraphText">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/pureWhite</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="GreySubtitleText">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/textGrey</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- BUTTONS -->
    <style name="BaseRoundedButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:layout_width">260dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="cornerRadius">168dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/pureWhite</item>
        <item name="android:fontFamily">@font/lato_black</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <!-- BOTTOM NAVIGATION BAR -->
    <style name="BottomNavigationViewTextStyle">
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <!-- Settings Page Styles -->
    <style name="SettingsSeparatorStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/settingsSeparatorColor</item>
        <item name="android:layout_marginStart">@dimen/settings_lateral_margin</item>
        <item name="android:layout_marginEnd">@dimen/settings_lateral_margin</item>
    </style>

    <style name="SettingsNameTextView" parent="BoldParagraphText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">@dimen/settings_item_padding</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:drawableEnd">@drawable/settings_right_arrow</item>
    </style>

    <!-- Dialogs -->
    <style name="DialogLayout">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">300dp</item>
        <item name="background">@color/primaryGray</item>
    </style>

</resources>
