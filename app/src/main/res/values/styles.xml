<resources
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/pastelRose</item>
        <item name="colorPrimaryDark">@color/pastelRoseDarker</item>
        <item name="colorAccent">@color/pastelRose</item>
        <item name="colorControlHighlight">#0DFFFFFF</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_screen_background</item>
    </style>

    <!-- TEXT VIEWS -->
    <style name="TitleText">
        <item name="android:fontFamily">@font/source_sans_pro_bold</item>
        <item name="android:textSize">42sp</item>
        <item name="android:textColor">@color/pureWhite</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="SettingsTitleText" parent="TitleText">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="TitleTextMatchResult" parent="TitleText">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="SecondaryTitleTextBlack">
        <item name="android:fontFamily">@font/lato_black</item>
        <item name="android:textColor">@color/pureWhite</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SecondaryTitleTextBold">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/pureWhite</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="BoldParagraphText">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/pureWhite</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="SettingsText" parent="BoldParagraphText">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ClickableSettingsText" parent="SettingsText">
        <item name="android:textColor">@color/pastelRose</item>
    </style>

    <style name="GreySubtitleText">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/textGrey</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- TextInputEditText -->
    <style name="SearchTextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:background">@drawable/rounded_corners_input_text_background</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:drawablePadding">14dp</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textColor">@color/primaryGray</item>
        <item name="android:textColorHint">@color/primaryGray</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center|start</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <!-- BUTTONS -->
    <style name="BaseButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:layout_width">260dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="backgroundTint">@color/base_button_selector</item>
        <item name="cornerRadius">25dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/pureWhite</item>
        <item name="android:fontFamily">@font/lato_black</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="UnfilledButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="strokeColor">@color/pastelRose</item>
        <item name="cornerRadius">25dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/pureWhite</item>
        <item name="android:fontFamily">@font/lato_black</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <!-- BOTTOM NAVIGATION BAR -->
    <style name="BottomNavigationViewTextStyle">
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <!-- Settings Page Styles -->
    <style name="SettingsSeparatorStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/settingsSeparatorColor</item>
        <item name="android:layout_marginStart">@dimen/settings_lateral_margin</item>
        <item name="android:layout_marginEnd">@dimen/settings_lateral_margin</item>
    </style>

    <style name="SettingsNameTextView" parent="BoldParagraphText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">@dimen/settings_item_padding</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:drawableEnd">@drawable/settings_right_arrow</item>
        <item name="android:clickable">true</item>
    </style>

    <!-- Dialogs -->

    <!-- N.B. @dimen/regular_dialog_size will not work since the width and height are determined in BaseDialogFragment.kt-->
    <style name="DialogCardViewLayout">
        <item name="android:layout_width">@dimen/regular_dialog_size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="background">@color/primaryGray</item>
    </style>

    <style name="DialogTitleText" parent="TitleText">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="DialogParagraphText" parent="BoldParagraphText">
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="UnfilledSmallButton" parent="UnfilledButton">
        <item name="android:layout_width">@dimen/button_width_small</item>
        <item name="android:layout_height">@dimen/button_height</item>
    </style>

    <!-- Misc -->
    <style name="SearchResultItemContainerLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="SearchResultUserImage">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="civ_border_width">0dp</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="SearchResultUserName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/pureWhite</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="WormDotsIndicatorStyle">
        <item name="dotsColor">@color/pastelRose</item>
        <item name="dotsCornerRadius">8dp</item>
        <item name="dotsSize">12dp</item>
        <item name="dotsSpacing">8dp</item>
        <item name="dotsStrokeColor">@color/pureWhite</item>
        <item name="dotsStrokeWidth">6dp</item>
    </style>

</resources>
